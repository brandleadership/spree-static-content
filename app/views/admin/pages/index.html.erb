<h1><%=t("ext_static_content_static_pages") %></h1>

<table class="admin-report" width="545">
	<thead>
		<tr>
      		<th><%=t("ext_static_content_title")%></th>
      		<th><%=t("ext_static_content_link")%></th>
      		<th><%=t("ext_static_content_visible")%></th>
      		<th><%=t("ext_static_content_show_in")%></th>
      		<th><%=t("action")%></th>
    	</tr>
  	</thead>
	
	<tbody>
    	<% sorted_pages.each do |page| %>
		<tr class="<%= cycle('even', 'odd') %> <%= page.root_page ? "root_page" : "" %>">
			<td>
                <%=page.root_page ? t('ext_static_content_root_page') + ":" : "" %>
				<%= page.title %>
			</td>
			<td>
				<%= link_to page.slug, page.slug %>
			</td>
			<td>
			  <%= page.visible %>
			</td>
            <td>
              <%= page.show_in_sidebar ? t('ext_static_content_show_in_sidebar') + "," : "" %>
              <%= page.show_in_header ? t('ext_static_content_show_in_header') + "," : "" %>
              <%= page.show_in_footer ? t('ext_static_content_show_in_footer') + "," : "" %>
              <%= page.show_in_help_navigation ? t('ext_static_content_show_in_help_navigation') + "," : "" %>
            </td>
			<td>
	          <%=link_to t("edit"), edit_object_url(page) %> |
              <%=link_to t("ext_static_content_new_sub_page"), admin_new_sub_url(page.id) %> |
	          <%=link_to t("delete"), object_url(page), :method => :delete, :confirm=> t("ext_static_content_confirm_delete") %>
	        </td>
		</tr>
		<% end %>
	</tbody>
</table>

<%= link_to t("ext_static_content_new_page"), new_object_url %>